<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <RelativeLayout
        android:id="@+id/alarm_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/slide_to_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"
            android:textSize="86sp"
            android:visibility="visible"
            tools:text="10:47" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_time"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/alarm_time_in_n_minutes"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/alarm_time_in_n_minutes"
                app:srcCompat="@drawable/ic_alarm_24px" />

            <TextView
                android:id="@+id/alarm_time_in_n_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Осталось 2 часа 47 минут"
                android:textAlignment="center"
                android:textColor="#9d9d9d"
                android:textSize="15sp"
                android:visibility="visible" />


        </LinearLayout>
    </RelativeLayout>

    <com.ohoussein.playpause.PlayPauseView
        android:id="@+id/play_pause_button"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:clickable="true"
        android:elevation="0dp"
        android:foreground="?android:selectableItemBackground"
        android:visibility="visible"
        app:fill_color="#fff"
        app:layout_constraintBottom_toTopOf="@id/slide_to_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alarm_time_container"
        app:pause_bg="#007E72"
        app:play_bg="#009688" />

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slide_to_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:animate_completion="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:outer_color="#E53935"
        app:rotate_icon="false"
        app:slider_height="48dp"
        app:slider_reversed="true"
        app:text="Отменить будильник"/>

</androidx.constraintlayout.widget.ConstraintLayout>
